#===========================================================================//
# GIVE PROPER CREDITS IF YOU USE THE PART OF IT IN YOUR WORK, THANKS!
#===========================================================================//

# INITIALIZATION
umask 022

# FUNCTIONS
require_new_magisk() {
  echo "- PLEASE INSTALL MAGISK V23+!"
  exit 1
}

print_modname() {
  echo " "
  echo "- SETTING UP ENVIRONMENT..."
  echo " "
}

# ENVIRONMENT
OUTFD=$2
ZIPFILE=$3

mount /data 2> /dev/null

[ -f "/data/adb/magisk/util_functions.sh" ] || require_new_magisk
. /data/adb/magisk/util_functions.sh
[ "$MAGISK_VER_CODE" -lt "23000" ] && require_new_magisk

TMPDIR=/dev/tmp

# OVERRIDE ABORT AS OLD SCRIPTS HAVE SOME ISSUES
abort() {
  echo "$1"
  [ -n "$MODPATH" ] && rm -rf $MODPATH
  rm -rf $TMPDIR
  exit 1
}

rm -rf $TMPDIR 2> /dev/null
mkdir -p $TMPDIR

# ABORT ON RECOVERY
if ! $BOOTMODE; then
  recovery_actions 2>&1 > /dev/null
  echo "- ABORTING..."
  abort "  INSTALLATION FROM RECOVERY NOT SUPPORTED"
fi

# PREP FLASH
ensure_bb 2>&1 > /dev/null

# MOUNT PARTITIONS
mount_partitions 2>&1 > /dev/null

# SETUP BUSYBOX AND BINARIES
boot_actions 2>&1 > /dev/null

# PREPARATION

# EXTRACT MODULE PROP
unzip -o "$ZIPFILE" module.prop -d $TMPDIR >&2
[ ! -f "$TMPDIR/module.prop" ] && abort "- UNABLE TO EXTRACT ZIP FILE!"
ODD=$(cat /dev/urandom | tr -cd 'A-F0-9' | head -c 8)
sed -i "s/.*id=.*/id=$ODD/" $TMPDIR/module.prop
[ -f "/data/.mcore" ] && mv -f /data/.mcore /data/.ncore

MODDIRNAME=modules_update
MODULEROOT=$NVBASE/$MODDIRNAME
MODID=$(grep_prop id $TMPDIR/module.prop)
MODNAME=$(grep_prop name $TMPDIR/module.prop)
MODPATH=$MODULEROOT/$MODID

# CREATE MODPATH
rm -rf $MODPATH 2> /dev/null
mkdir -p $MODPATH

# INSTALL
print_modname
unzip -o "$ZIPFILE" install -d $MODPATH >&2
echo "- EXTRACTING MODULE FILES..."
unzip -o "$ZIPFILE" -x 'META-INF/*' -d $MODPATH >&2
[ -f "$MODPATH/resources.xz" ] && tar -xf $MODPATH/resources.xz -C $MODPATH 2> /dev/null

# DEFAULT PERMISSION
set_perm_recursive $MODPATH 0 0 0755 0644
set_perm_recursive $MODPATH/install 0 0 0755 0755

# LOAD CUSTOM INSTALLER
$MODPATH/install

# UPDATE MAGISK INFO
mktouch $NVBASE/modules/$MODID/update
cp -af $MODPATH/module.prop $NVBASE/modules/$MODID/module.prop

# REMOVE STUFFS
rm -rf \
  $MODPATH/LICENSE $MODPATH/install \
  $MODPATH/*.json $MODPATH/*.md \
  $MODPATH/.git* $MODPATH/resources* 2> /dev/null

# FINALIZING
cd /
rm -rf $TMPDIR

exit 0
