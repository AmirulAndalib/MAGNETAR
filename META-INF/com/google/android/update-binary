umask 022

ui_print() { echo "$1"; }

require_new_magisk() {
  ui_print "- PLEASE INSTALL MAGISK VERSION 23 OR NEWER!"
  exit 1
}

OUTFD=$2
ZIPFILE=$3

mount /data 2> /dev/null

[ -f "/data/adb/magisk/util_functions.sh" ] || require_new_magisk
. /data/adb/magisk/util_functions.sh

install_module
exit 0
